---
import { AstroFont } from "astro-font";
import { ClientRouter } from "astro:transitions";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>Clutch</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <AstroFont
      config={[
        {
          src: [],
          name: "Noto Serif",
          googleFontsURL:
            "https://fonts.googleapis.com/css2?family=Noto+Serif:ital,wght@0,400;0,600;1,400;1,700&display=swap",
          preload: true,
          display: "swap",
          selector: "html",
          fallback: "serif",
        },
        {
          src: [],
          name: "Inter",
          googleFontsURL:
            "https://fonts.googleapis.com/css2?family=Inter:ital,wght@0,400;0,600;1,400;1,700&display=swap",
          preload: true,
          display: "swap",
          selector: "html",
          fallback: "sans-serif",
        },
      ]}
    />
    <ClientRouter />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  html,
  body {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: "Noto Serif", serif;
    font-size: 16px;
    color: #fff;
    background-color: #fffff2;
  }

  a {
    color: #221f1b;
    font-family:
      "Inter",
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Helvetica Neue",
      Arial,
      sans-serif;
    font-size: 16px;
    line-height: 34px;
    margin: 0;
    transition: all 0.1s ease-in-out;
    text-decoration: none;

    &:hover {
      transition: all 0.1s ease-in-out;
      color: #ed705a;
    }
  }
</style>
