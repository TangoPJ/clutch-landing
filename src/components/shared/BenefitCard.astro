---
import { Image as AstroImage } from "astro:assets";

const { src, alt, title, description } = Astro.props;
---

<div class="benefit-card">
  <div class="benefit-card-icon">
    <AstroImage
      class="benefit-card-image"
      src={src}
      alt={alt}
      width="34"
      height="34"
    />
  </div>
  <h3 class="benefit-card-title">{title}</h3>
  <p class="benefit-card-description">{description}</p>
</div>

<style>
  .benefit-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    text-align: center;
    background-color: #fff;
    border-radius: 24px;
    padding: 50px;

    @media screen and (max-width: 768px) {
      padding: 36px;
      gap: 0.875rem;
    }

    @media screen and (max-width: 576px) {
      padding: 24px;
      gap: 0.75rem;
    }
  }

  .benefit-card-icon {
    width: 70px;
    height: 70px;
    border-radius: 50%;
    background-color: #f0eadd;
    display: flex;
    align-items: center;
    justify-content: center;

    @media screen and (max-width: 768px) {
      width: 60px;
      height: 60px;
    }

    @media screen and (max-width: 576px) {
      width: 52px;
      height: 52px;
    }
  }

  .benefit-card-image {
    width: 34px;
    height: 34px;

    @media screen and (max-width: 768px) {
      width: 30px;
      height: 30px;
    }

    @media screen and (max-width: 576px) {
      width: 26px;
      height: 26px;
    }
  }

  .benefit-card-title {
    color: #221f1b;
    font-weight: 700;
    font-size: 30px;
    line-height: 42px;
    margin: 0;

    @media screen and (max-width: 576px) {
      font-size: 20px;
      line-height: 28px;
    }

    @media screen and (max-width: 768px) {
      font-size: 24px;
      line-height: 32px;
    }
  }

  .benefit-card-description {
    color: #221f1b;
    font-weight: 500;
    font-size: 18px;
    line-height: 140%;

    @media screen and (max-width: 576px) {
      font-size: 14px;
      line-height: 150%;
    }

    @media screen and (max-width: 768px) {
      font-size: 16px;
      line-height: 150%;
    }
  }
</style>
