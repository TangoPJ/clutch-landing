---
import { Image as AstroImage } from "astro:assets";
import AppleIcon from "../../assets/apple-icon.svg";
import GooglePlayIcon from "../../assets/google-play.svg";

interface Props {
  type: "app-store" | "google-play";
  href: string;
  label?: string;
}

const { type, href, label } = Astro.props;

const icon = type === "app-store" ? AppleIcon : GooglePlayIcon;
const topText = type === "app-store" ? "Download on the" : "GET IT ON";
const bottomText = type === "app-store" ? "App Store" : "Google Play";
const altText =
  type === "app-store" ? "Download on the App Store" : "Get it on Google Play";
---

<a
  href={href}
  class="store-download-button"
  target="_blank"
  rel="noreferrer"
  aria-label={altText}
>
  <AstroImage src={icon} alt={type} class="store-icon" />
  <div class="store-text">
    <span class="store-text-top">{label || topText}</span>
    <span class="store-text-bottom">{bottomText}</span>
  </div>
</a>

<style>
  .store-download-button {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 20px;
    background-color: #ffffff;
    border-radius: 8px;
    text-decoration: none;
    color: #000000;
    font-family:
      "Inter",
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Helvetica Neue",
      Arial,
      sans-serif;
    transition: all 0.2s ease;
    min-width: 180px;
    width: 100%;
  }

  .store-download-button:hover {
    background-color: #f5f5f5;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .store-icon {
    width: 32px;
    height: 32px;
    flex-shrink: 0;
  }

  .store-text {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    line-height: 1.2;
  }

  .store-text-top {
    font-size: 11px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .store-text-bottom {
    font-size: 20px;
    font-weight: 700;
    line-height: 1.1;
  }

  @media screen and (max-width: 576px) {
    .store-download-button {
      min-width: 160px;
      padding: 10px 16px;
      gap: 10px;
    }

    .store-icon {
      width: 28px;
      height: 28px;
    }

    .store-text-top {
      font-size: 10px;
    }

    .store-text-bottom {
      font-size: 18px;
    }
  }
</style>
