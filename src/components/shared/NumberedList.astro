---
const { number } = Astro.props;
---

<div class="numbered-list">
  <div class="numbered-list-number">
    {number}
  </div>
  <p class="numbered-list-content">
    <slot />
  </p>
</div>

<style>
  .numbered-list {
    display: flex;
    flex-direction: row;
    gap: 1rem;
    align-items: center;
  }

  .numbered-list-number {
    color: #fff;
    border-radius: 50%;
    background-color: #ed705a;
    width: 56px;
    height: 56px;
    min-width: 56px;
    min-height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24px;
    font-weight: 700;
    line-height: 130%;
  }

  .numbered-list-content {
    color: #000;
    font-weight: 500;
    font-size: 18px;
    line-height: 130%;
    margin: 0;
  }
</style>
