---
const linkFontSize = "1rem";
---

<div class="header">
  <a href="/" class="home-link">Home</a>
  <div class="content">
    <p class="title">Yamamoto Ltd</p>
    <p class="description">Company Number 15712654</p>
    <p class="description">20 Wenlock Road, London, N1 7GU, United Kingdom</p>
    <p class="date">18 October 2024</p>
  </div>
</div>

<style define:vars={{ linkFontSize }}>
  .header {
    display: flex;
    justify-content: flex-end;
    color: #221f1b;
    padding: 1rem;
    text-align: right;
    align-items: flex-start;
  }

  .home-link {
    margin-right: auto;
    font-size: var(--linkFontSize);
    line-height: calc(var(--linkFontSize) * 1.5);
  }

  .content {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 1rem;
  }

  .title {
    font-size: 18px;
    font-weight: 600;
    line-height: 24px;
    margin: 0;
  }

  .description {
    font-size: 14px;
    font-weight: 400;
    line-height: 20px;
    margin: 0;
  }

  .date {
    font-size: 12px;
    font-weight: 400;
    line-height: 16px;
    margin: 0;
    margin-top: 1rem;
  }
</style>
