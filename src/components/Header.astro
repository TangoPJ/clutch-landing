---
import ClutchLogo from "../assets/clutch-logo.svg";
import Button from "./shared/Button.astro";
import { Image as AstroImage } from "astro:assets";
---

<header class="header">
  <nav class="header-nav">
    <AstroImage class="logo" src={ClutchLogo} alt="Clutch" />
    <Button> Contact </Button>
  </nav>
  <div class="header-content">
    <h1 class="header-content-title">
      Effortless road trips: we plan, you explore.
    </h1>
    <p class="header-content-subtitle">
      Clutch takes the hassle out of planning your dream road trips, whether
      itâ€™s a<br />once-in-a-lifetime adventure or a spontaneous weekend escape.
    </p>
    <p class="header-content-description">
      We handle all the details, from routes to stays,<br />so you can focus
      100% on the open road.
    </p>
    <div class="header-store-links">
      <a
        class="store-button"
        href="https://www.apple.com/app-store/"
        target="_blank"
        rel="noreferrer"
        aria-label="Download on the App Store"
      >
        <span class="store-button-label">Download on the</span>
        <span class="store-button-store">App Store</span>
      </a>
      <a
        class="store-button"
        href="https://play.google.com/store/"
        target="_blank"
        rel="noreferrer"
        aria-label="Get it on Google Play"
      >
        <span class="store-button-label">Get it on</span>
        <span class="store-button-store">Google Play</span>
      </a>
    </div>
  </div>
</header>

<style>
  .header {
    background-image:
      linear-gradient(
        180deg,
        rgba(29, 117, 125, 0) 0%,
        rgba(22, 17, 14, 0.81) 52.16%,
        rgba(8, 28, 30, 0) 78.14%
      ),
      url("../assets/background-image.png");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    padding: 24px;

    @media screen and (max-width: 768px) {
      padding: 28px;
    }

    @media screen and (max-width: 576px) {
      padding: 20px;
    }
  }

  .header-nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    text-align: center;
    margin: auto;
  }

  .logo {
    @media screen and (max-width: 768px) {
      width: 200px;
      height: 42px;
    }
  }

  .header-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    max-width: 808px;
    width: 100%;
    margin: 132px auto;
    text-align: center;

    @media screen and (max-width: 768px) {
      margin: 96px auto;
    }

    @media screen and (max-width: 576px) {
      margin: 64px auto;
    }
  }

  .header-content-title {
    font-weight: 700;
    font-size: 70px;
    line-height: 72px;
    margin: 0;
    margin-bottom: 22px;

    @media screen and (max-width: 768px) {
      font-size: 52px;
      line-height: 58px;
    }

    @media screen and (max-width: 576px) {
      font-size: 36px;
      line-height: 42px;
    }
  }

  .header-content-subtitle {
    font-weight: 500;
    font-size: 18px;
    line-height: 150%;
    margin: 0;
    margin-bottom: 30px;

    @media screen and (max-width: 768px) {
      font-size: 16px;
      margin-bottom: 22px;
    }

    @media screen and (max-width: 576px) {
      font-size: 14px;
      margin-bottom: 16px;
    }
  }

  .header-content-description {
    font-weight: 700;
    font-size: 22px;
    line-height: 28px;
    margin: 0;
    margin-bottom: 50px;

    @media screen and (max-width: 768px) {
      font-size: 18px;
      line-height: 24px;
      margin-bottom: 36px;
    }

    @media screen and (max-width: 576px) {
      font-size: 16px;
      line-height: 22px;
      margin-bottom: 24px;
    }
  }

  .header-content-subtitle br,
  .header-content-description br {
    @media screen and (max-width: 576px) {
      display: none;
    }
  }

  .header-store-links {
    display: flex;
    gap: 0.6rem;
    justify-content: space-between;
    flex-wrap: wrap;
    width: 100%;
    max-width: 631px;
    min-height: 60px;
  }

  .store-button {
    flex: 1;
    min-width: 240px;
    min-height: 60px;
    border-radius: 16px;
    background: rgba(255, 255, 255, 0.12);
    border: 1px solid rgba(255, 255, 255, 0.5);
    color: #fff;
    text-decoration: none;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 10px 24px;
    transition:
      background 0.2s ease,
      border-color 0.2s ease;

    @media screen and (max-width: 576px) {
      width: 100%;
      min-height: 56px;
    }
  }

  .store-button:hover,
  .store-button:focus-visible {
    background: rgba(255, 255, 255, 0.2);
    border-color: #fff;
  }

  .store-button-label {
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  .store-button-store {
    font-size: 18px;
    font-weight: 700;
    line-height: 24px;
  }
</style>
