---
import ClutchLogo from "../assets/clutch-logo.svg";
import Button from "./shared/Button.astro";
import { Image as AstroImage } from "astro:assets";
import StoreDownloadButton from "./shared/StoreDownloadButton.astro";
import { Image } from "astro:assets";
import QrCode from "../assets/qrcode.svg";
---

<header class="header">
  <nav class="header-nav">
    <AstroImage class="logo" src={ClutchLogo} alt="Clutch" />
    <Button> Contact </Button>
  </nav>
  <div class="header-content">
    <h1 class="header-content-title">
      Effortless road trips: we plan, you explore.
    </h1>
    <p class="header-content-subtitle">
      Clutch takes the hassle out of planning your dream road trips, whether
      itâ€™s a<br />once-in-a-lifetime adventure or a spontaneous weekend escape.
    </p>
    <p class="header-content-description">
      We handle all the details, from routes to stays,<br />so you can focus
      100% on the open road.
    </p>
    <div class="download-box">
      <div class="qr-wrapper">
        <Image class="qr-image" src={QrCode} alt="QR Code" />
      </div>
      <div class="buttons">
        <StoreDownloadButton
          type="app-store"
          href="https://www.apple.com/app-store/"
        />
        <StoreDownloadButton
          type="google-play"
          href="https://play.google.com/store/"
        />
      </div>
    </div>
  </div>
</header>

<style>
  .header {
    background-image:
      linear-gradient(
        180deg,
        rgba(29, 117, 125, 0) 0%,
        rgba(22, 17, 14, 0.81) 52.16%,
        rgba(8, 28, 30, 0) 78.14%
      ),
      url("../assets/background-image.png");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    padding: 24px;

    @media screen and (max-width: 768px) {
      padding: 28px;
    }

    @media screen and (max-width: 576px) {
      padding: 20px;
    }
  }

  .header-nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    text-align: center;
    margin: auto;
  }

  .logo {
    @media screen and (max-width: 768px) {
      width: 200px;
      height: 42px;
    }
  }

  .header-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    max-width: 808px;
    width: 100%;
    margin: 132px auto;
    text-align: center;

    @media screen and (max-width: 768px) {
      margin: 96px auto;
    }

    @media screen and (max-width: 576px) {
      margin: 64px auto;
    }
  }

  .header-content-title {
    font-weight: 700;
    font-size: 70px;
    line-height: 72px;
    margin: 0;
    margin-bottom: 22px;

    @media screen and (max-width: 768px) {
      font-size: 52px;
      line-height: 58px;
    }

    @media screen and (max-width: 576px) {
      font-size: 36px;
      line-height: 42px;
    }
  }

  .header-content-subtitle {
    font-weight: 500;
    font-size: 18px;
    line-height: 150%;
    margin: 0;
    margin-bottom: 30px;

    @media screen and (max-width: 768px) {
      font-size: 16px;
      margin-bottom: 22px;
    }

    @media screen and (max-width: 576px) {
      font-size: 14px;
      margin-bottom: 16px;
    }
  }

  .header-content-description {
    font-weight: 700;
    font-size: 22px;
    line-height: 28px;
    margin: 0;
    margin-bottom: 50px;

    @media screen and (max-width: 768px) {
      font-size: 18px;
      line-height: 24px;
      margin-bottom: 36px;
    }

    @media screen and (max-width: 576px) {
      font-size: 16px;
      line-height: 22px;
      margin-bottom: 24px;
    }
  }

  .header-content-subtitle br,
  .header-content-description br {
    @media screen and (max-width: 576px) {
      display: none;
    }
  }

  .download-box {
    --store-btn-height: 64px;
    --buttons-gap: 14px;
    display: grid;
    grid-template-columns: auto 1fr;
    align-items: center;
    gap: 30px;
    padding: 18px 20px;
    border-radius: 16px;
    backdrop-filter: blur(6px);
    width: fit-content;
    margin: 0 auto;

    @media screen and (max-width: 768px) {
      --store-btn-height: 58px;
      gap: 16px;
      padding: 16px;
    }

    @media screen and (max-width: 576px) {
      grid-template-columns: 1fr;
      justify-items: center;
      width: 100%;
    }
  }

  .qr-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 8px;
    background: #ffffff;
    border-radius: 12px;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.16);

    @media screen and (max-width: 576px) {
      order: -1;
    }
  }

  .qr-image {
    height: calc(var(--store-btn-height) * 2 + var(--buttons-gap));
    width: auto;
    display: block;

    @media screen and (max-width: 576px) {
      height: auto;
      max-height: 180px;
      width: 180px;
    }
  }

  .buttons {
    display: flex;
    flex-direction: column;
    gap: var(--buttons-gap);
    align-self: stretch;
    justify-content: space-around;
  }

  .buttons :global(.store-download-button) {
    height: var(--store-btn-height);
  }
</style>
